{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "inlineSources": true,
    "inlineSourceMap": true,
    "sourceRoot": "/",
    "target": "ES2020",
    "outDir": ".build",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["ES2020", "DOM"],
    "rootDir": "./src",
    "resolveJsonModule": true
  }
}
